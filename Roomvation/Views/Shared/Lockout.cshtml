@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Account inactive";
}

<hgroup>
    <h2 class="text-danger">Account inactive.</h2>
    <h4 class="text-danger">This account has not been activated by Administrator. Please try again later.</h4>
    <h6 class="mt-5 ml-5">Redirecting to home page in 5 seconds...</h6>
</hgroup>

<script>
    setTimeout(function () {
        location.href = '/';
    }, 5000);
</script>
