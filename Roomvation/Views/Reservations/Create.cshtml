@using Roomvation.Migrations
@model Roomvation.Models.Reservation

@{
    ViewBag.Title = "Create new reservation";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.CreatorId, new { type = "hidden" })

        <div class="row">
            <div class="d-flex align-items-center flex-column col-6">
                <h5>@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label" })</h5>
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger mb-3" })

                <h5>@Html.LabelFor(model => model.MeetingTime, htmlAttributes: new { @class = "control-label" })</h5>
                <div>
                    @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control inline mb-3" } }) -
                    @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control inline mb-3" } })
                </div>
            </div>

            <div class="d-flex align-items-center flex-column col-6">
                <h5>@Html.LabelFor(model => model.MeetingDescription, htmlAttributes: new { @class = "control-label" })</h5>
                @Html.TextAreaFor(m => m.MeetingDescription, 4, 50, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MeetingDescription, "", new { @class = "text-danger mb-3" })

                <input type="submit" value="Create" class="btn btn-outline-primary mb-5" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
